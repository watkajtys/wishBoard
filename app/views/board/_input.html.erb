<div class = 'form'>
   <%= form_for(@post) do |f| %>

      <%= f.hidden_field :prepend, :value => "I wish" %>
      
      <%= f.text_field :entry %>
      
      <%= f.hidden_field :color, :value => "#f3f2f2" %>

      <div class = "color_container">
         <div class = "color"><%= render :partial => 'colors'%></div>
      </div>
      
      <span class='submit'><%= f.submit "Post to the wall" %></span>
      
   <% end %>
</div>